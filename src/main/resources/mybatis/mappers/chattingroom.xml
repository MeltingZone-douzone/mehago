<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="chattingroom">

    <insert id="createRoom" parameterType="chattingroom">
		<![CDATA[
			insert 
				into chatting_room 
				values(null,#{title},#{password},#{thumbnailUrl},#{limitedUserCount},now(),#{onlyAuthorized},#{searchable},#{secretRoom},#{owner})		
        ]]>
        <selectKey keyProperty="no" order="AFTER" resultType="Long">
            select last_insert_id()
        </selectKey>
	</insert>
  <select id="getChatRoomList" resultType="chattingroom">
    <![CDATA[
		select no, title, password , thumbnail_url as thumbnailUrl ,  limited_user_count as limitedUserCount, created_at as createdAt, only_authoried as onlyAuthoried , searchable, secret_room as secretRoom, owner
		   from chatting_room 
		]]> 
  </select>

</mapper>