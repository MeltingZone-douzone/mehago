<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="participant">

 <insert id="createParticipant" parameterType="participant">
		<![CDATA[
			insert 
				into participant 
				values(null,#{accountNo},#{chattingRoomNo},#{chatNickname},#{notReadChat},#{lastReadChatNo})		
        ]]>
        <selectKey keyProperty="no" order="AFTER" resultType="Long">
            select last_insert_id()
        </selectKey>
	</insert>
<select id="getParticipantNo" parameterType="Map" resultType="participant">
	<![CDATA[
		select 
			no, chat_nickname as chatNickname
		from
			participant
		where
			account_no = #{accountNo}
		AND
			chatting_room_no = #{chattingRoomNo}
	]]>
</select>


</mapper>